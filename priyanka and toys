#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int toys(vector<int>& w) {
    sort(w.begin(), w.end());
    int containers = 1;
    int container_start = w[0];

    for (int i = 1; i < w.size(); i++) {
        if (w[i] > container_start + 4) {
            containers++;
            container_start = w[i];
        }
    }

    return containers;
}

int main() {
    int n;
    cin >> n;
    vector<int> weights(n);
    for (int i = 0; i < n; i++) {
        cin >> weights[i];
    }

    cout << toys(weights) << endl;

    return 0;
}
