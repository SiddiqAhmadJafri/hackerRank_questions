#include <iostream>
using namespace std;

int saveThePrisoner(int n, int m, int s) {
    // Calculate position of last sweet
    int result = (s + m - 1) % n;
    // If result is 0, it means the last prisoner is n
    return (result == 0) ? n : result;
}

int main() {
    int t; // Number of test cases
    cin >> t;
    while (t--) {
        int n, m, s;
        cin >> n >> m >> s;
        cout << saveThePrisoner(n, m, s) << endl;
    }
    return 0;
}
